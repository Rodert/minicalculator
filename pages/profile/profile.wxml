<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-info">
    <view class="avatar-container">
      <view class="avatar"></view>
    </view>
    <view class="user-name">微信用户</view>
  </view>
  
  <!-- 功能列表 -->
  <view class="function-list">
    <view class="function-group">
      <view class="function-item" bindtap="handleFunction" data-type="history">
        <view class="function-icon history-icon"></view>
        <view class="function-text">计算历史</view>
        <view class="arrow"></view>
      </view>
      
      <view class="function-item" bindtap="handleFunction" data-type="feedback">
        <view class="function-icon feedback-icon"></view>
        <view class="function-text">意见反馈</view>
        <view class="arrow"></view>
      </view>
      
      <view class="function-item" bindtap="handleFunction" data-type="about">
        <view class="function-icon about-icon"></view>
        <view class="function-text">关于我们</view>
        <view class="arrow"></view>
      </view>
    </view>
    
    <view class="function-group">
      <view class="function-item" bindtap="handleFunction" data-type="settings">
        <view class="function-icon settings-icon"></view>
        <view class="function-text">设置</view>
        <view class="arrow"></view>
      </view>
    </view>
  </view>
  
  <!-- 底部版本信息 -->
  <view class="footer">
    <text class="version">版本 1.0.0</text>
  </view>
</view> 